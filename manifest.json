{
  "manifest_version": 3,
  "name": "Copy Link on Hover",
  "version": "1.0.0",
  "description": "Easily copy link URLs by hovering over them and pressing Ctrl+C (or Cmd+C on Mac).",
  "author": "Matt Kirtley",
  "homepage_url": "https://mattkirtley.com/",
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "logo-16.png",
    "32": "logo-32.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  }
}
